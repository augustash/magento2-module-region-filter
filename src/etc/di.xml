<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Directory\Model\ResourceModel\Region\Collection">
        <plugin name="directory-region-options-filter" type="Augustash\RegionFilter\Plugin\RemoveFromOptionsPlugin" sortOrder="10" disabled="false"/>
    </type>
    <type name="Magento\Directory\Helper\Data">
        <plugin name="directory-region-json-filter" type="Augustash\RegionFilter\Plugin\RemoveFromHelperJsonPlugin" sortOrder="20" disabled="false"/>
    </type>
</config>
